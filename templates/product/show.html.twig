{% extends "base.html.twig" %}
{% block title %}
	Cat√©gorie

{% endblock %}

{% block body %}
	<ol class="breadcrumb" style="padding:10px">
		<li class="breadcrumb-item">
			<a href="{{ path('homePage') }}">Home</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{path('product_category',{'slug':product.category.slug})}}">{{product.category.name}}</a>
		</li>
		<li class="breadcrumb-item active">{{product.name}}</li>
	</ol>
	<h4 style="text-align: center;padding:30px">Produit :
		{{product.name}}
		({{product.price/100}}
		&euro;)</h4>
	<div class="row">
		<div class="col-4">
			<img src="{{product.picture}}" class=" img-fluid" alt=" image for product">
		</div>
		<div class="col">
			<span>
				<strong>{{product.category.name}}</strong>
			</span>
			<p>{{product.shortDesc}}</p>

			<a href="#" class="btn btn-primary btn-sm">Commenter</a>
			<a href="#" class="btn btn-success btn-sm">Ajouter</a>
		</div>
	</div>
</div>{% endblock %}
