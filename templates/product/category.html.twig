{% extends "base.html.twig" %}
{% block title %}
	Catégorie

{% endblock %}

{% block body %}
	<ol class="breadcrumb" style="padding:10px">
		<li class="breadcrumb-item">
			<a href="{{ path('homePage') }}">Home</a>
		</li>
		<li class="breadcrumb-item active">{{category.name}}</li>
	</ol>
	<h4 style="text-align: center;padding:30px">Catégorie :
		{{category.name}}</h4>
	<div class="row">
		{% for product in category.products %}
			<div class="col-lg-3">
				<div class="card">
					<img src="{{product.picture}}" class=" img-fluid" alt=" image for product">
					<card-body>
						<h4 class="card-title">{{product.name}}
							({{product.price/100}}
							&euro;)</h4>
						<span>
							<strong>{{product.category.name}}</strong>
						</span>
						<p class="card-text">{{product.shortDesc}}</p>
						<a href="{{ path('product_show',{ 'category_slug':product.category.slug, 'slug':product.slug})}}" class="btn btn-primary btn-sm">Détails</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter</a>
					</card-body>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
