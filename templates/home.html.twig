{% extends "base.html.twig" %}

{% block title %}
	Acceuil
{% endblock %}


{% block body %}

	<h4 style="text-align: center;padding:30px">Nos produits cosmétiques
	</h4>
	<div class="row">
		{% for product in products %}
			<div class="col-lg-3">
				<div class="card">
					<img src="{{product.picture}}" class=" img-fluid" alt=" image for product">
					<card-body>
						<h4 class="card-title">{{product.name}}
							({{product.price/100}}
							&euro;)</h4>
						<span>
							<strong>{{product.category.name}}</strong>
						</span>
						<p style=" overflow: hidden; max-width: 50ch;text-overflow: ellipsis;white-space: pre-wrap;height: 100px;" class="card-text">{{product.shortDesc}}</p>
						<a href="{{ path('product_show',{ 'category_slug':product.category.slug, 'slug':product.slug})}}" class="btn btn-primary btn-sm" style="margin-left:190px">Détails</a>
					</card-body>
				</div>
			</div>
		{% endfor %}
	</div>
	<br>
	<br>
	<div class="row">
		<div class="col-lg-3">
			<div class="alert alert-dismissible alert-success">
				<img src="https://blissim.fr/static/images/svg/delivery-express.svg" width="20" height="19" alt="">
				<strong>Livraison offerte</strong><br>
				pour la box 59€ d’achat
			</div>
		</div>
		<div class="col-lg-3">
			<div class="alert alert-dismissible alert-success">
				<img src="https://blissim.fr/static/images/svg/happy.svg" width="20" height="19" alt="">
				<strong>Heureuse ou Remboursée</strong><br>
				Retours gratuits sous 30 jours
			</div>
		</div>
		<div class="col-lg-3">
			<div class="alert alert-dismissible alert-success">
				<img src="https://blissim.fr/static/images/svg/sav.svg" width="20" height="19" alt="">
				<strong>Notre équipe à votre écoute</strong><br>
				Besoin d'aide ? Contactez-nous
			</div>
		</div>
		<div class="col-lg-3">
			<div class="alert alert-dismissible alert-success">
				<img src="https://blissim.fr/static/images/svg/secure_payment.svg" width="20" height="19" alt="">
				<strong>Paiement</strong><br>
				100% sécurisé

			</div>
		</div>
	</div>
	<br><br>
	<div class="alert alert-dismissible alert-primary" style="text-align: center;">
		<a href="https://blissim.fr/?gclid=EAIaIQobChMIleqo4Zy7_wIVigkGAB2mqQ9wEAAYASAAEgKpbfD_BwE" class="alert-link">
			<strong>Blissim</strong>
		</a>
	</div>


{% endblock %}
